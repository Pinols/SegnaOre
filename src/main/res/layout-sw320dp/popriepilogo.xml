<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluefinal">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/scegli"
        android:textColor="#020101"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinMese"
        android:layout_width="150dp"
        android:layout_height="74dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:entries="@array/spinnerMese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Spinner
        android:id="@+id/spinAnno"
        android:layout_width="151dp"
        android:layout_height="71dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:entries="@array/spinnerAnno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinMese" />

    <Button
        android:id="@+id/buttonRiep"
        android:layout_width="94dp"
        android:layout_height="46dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/blackborder3"
        android:text="@string/ok"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinAnno" />
</androidx.constraintlayout.widget.ConstraintLayout>