<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="@drawable/bluefinal">

    <TextView
        android:id="@+id/tvpausa"
        android:layout_width="104dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:text="@string/pausa"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/spinnerfin"
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:entries="@array/spinnerfine"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/spinnerarr" />

    <Spinner
        android:id="@+id/spinnerarr"
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:entries="@array/spinnerarrivo"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="66dp"
        android:text="@string/arr"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="@string/fin"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/B004"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/blackborder3"
        android:text="@string/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPausa" />

    <Spinner
        android:id="@+id/spinnerPausa"
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:entries="@array/spinnerPausa"
        app:layout_constraintStart_toEndOf="@+id/tvpausa"
        app:layout_constraintTop_toBottomOf="@+id/spinnerfin" />

    <TextView
        android:id="@+id/tvday"
        android:layout_width="312dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:textColor="#020101"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>